import java.util.*;

public class Repository {

   public void createStaff() {
      Scanner console = new Scanner(System.in);
      Arraylist<Staff> staffList = new ArrayList<>();
      System.out.println("In order to create a new member staff, please enter the following:");
      System.out.println("First Name: ");
      String firstName = console.next();
      System.out.println("Last Name: ");
      String lastName = console.next();
      System.out.println("Job: ");
      String job = console.next();
      System.out.println("Address: ");
      String address = console.next();
      System.out.println("Phone number: ");
      String phoneNumber = console.next();
      System.out.println("CPR: ");
      String cpr = console.next();
      System.out.println("Working Hours: ");
      int hours = console.nextInt();
      System.out.println("Monthly Salary: ");
      int salary = console.nextInt();
      
      Staff staff = new Staff();
      staff.setFirstName(firstName);
      staff.setLastName(lastName);
      staff.setJob(job);
      staff.setAdress(address);
      staff.setPhoneNumber(phoneNumber);
      staff.setCpr(cpr);
      staff.setHours(hours);
      staff.setSalary(salary);
      
      staffList.add(staff);
      
        
   }

}


